{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd/MM/yy HH:mm:ss,fff} [{Level:u3}] {Message}{NewLine:1}"
        }
      },
      {
        "Name": "WarningFileLogger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Warning'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "WarningFile",
                "Args": {
                  "path": "logs/warning-.log",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true
                }
              }
            ]
          }
        }
      },
      {
        "Name": "ErrorFileLogger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Error'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "ErrorFile",
                "Args": {
                  "path": "logs/error-.log",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true
                }
              }
            ]
          }
        }
      }
    ]
  },
  "Infiscal": {
