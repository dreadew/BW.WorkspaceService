{
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File", "Serilog.Sinks.Graylog"],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "System": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:dd/MM/yy HH:mm:ss,fff} [{Level:u3}] {Message}{NewLine:1}"
        }
      },
      {
        "Name": "Graylog",
        "Args": {
          "hostnameOrAddress": "localhost",
          "port": 12201,
          "transportType": "Udp",
          "facility": "WorkspaceService",
          "minimumLogEventLevel": "Information"
        }
      },
      {
        "Name": "WarningFileLogger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Warning'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "WarningFile",
                "Args": {
                  "path": "logs/warning-.log",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true
                }
              }
            ]
          }
        }
      },
      {
        "Name": "ErrorFileLogger",
        "Args": {
          "configureLogger": {
            "Filter": [
              {
                "Name": "ByIncludingOnly",
                "Args": {
                  "expression": "@Level = 'Error'"
                }
              }
            ],
            "WriteTo": [
              {
                "Name": "ErrorFile",
                "Args": {
                  "path": "logs/error-.log",
                  "rollingInterval": "Day",
                  "rollOnFileSizeLimit": true
                }
              }
            ]
          }
        }
      }
    ],
    "Enrich": [
      "WithMachineName",
      "WithThreadId",
      "WithEnvironmentName"
    ],
    "Properties": {
      "Application": "WorkspaceService"
    }
  },
  "Infiscal": {
    "ClientId": "a1817932-b8e8-4080-8dae-cc9515321ad0",
    "ClientSecret": "7c3656ab4f0e2899ab4fdd221e1ac7948fc4928717c2f1306aeb4bf83d4da45c",
    "ProjectId": "05455ef8-740b-4d6a-982a-be672e3d4837",
    "SiteUrl": "http://localhost:9095"
  },
  "Jaeger": {
    "AgentHost": "jaeger",
    "AgentPort": 6831,
    "ServiceName": "workspace-service"
  },
  "Graylog": {
    "Host": "graylog",
    "Port": 12201
  },
  "RateLimiting": {
    "PermitLimit": "20",
    "Window": "10s"
  },
  "AllowedHosts": "*",
  "IdentityServiceUrl": "https://localhost:7090"
}
